<table>
  <tr>
    <th>Film</th>
    <th>Tagline</th>
    <th>User</th>
    <th>Team</th>
  </tr>
  <% @films.each do |film| %>
    <tr>
      <td><%= link_to film.title, edit_film_path(film) %></td>
      <td><%= film.tagline %></td>
      <td><%= film.user.name %></td>
      <td><%= film.user.team.name %></td>
    </tr>
  <% end %>
</table>

